{{> enTete}}
{{> menu}}		
<h1> Ajouter une citation</h1>
<form method="post" action="/insertCitation" name="ajoutCitation">
	<table>
	<tr>
		<td>
			Enseignant :
		</td>
		<td>
			<select id="selectEnseignant" name="selectEnseignant">
				{{#each listePersonne}}
				<option value="{{this.per_num}}">{{this.per_nom}}</option> 
				{{/each}}
			</select>
		</td>
	</tr>
	<tr>
		<td>
			Date citation :
		</td>
		<td>
            {{#if date}}
            <input type="text" placeholder="jj/mm/aaaa" pattern="[0-3][0-9]/[0-1][0-9]/[1-2][0-9][0-9][0-9]" name="date" id="date" value={{date}} required>
            {{else}}
			<input type="text" placeholder="jj/mm/aaaa" pattern="[0-3][0-9]/[0-1][0-9]/[1-2][0-9][0-9][0-9]" name="date" id="date" required>
            {{/if}}
		</td>
	</tr>
	<tr>
		<td>
			Citation :
		</td>
		<td>
            {{#if citation}}
			<textarea name="citation" id="citation" placeholder="..." required>{{citation}}</textarea>
            {{else}}
            <textarea name="citation" id="citation" placeholder="..." required></textarea>
            {{/if}}
		</td>
	</tr>
    {{#if motsInterdits}}
    <tr>
		<td colspan="2">
			{{#each motsInterdits}}
                <p><img src="/image/erreur.png"> Le mot "{{this}}" n'est pas autoris√©.</p>
            {{/each}}
		</td>
	</tr>
    {{/if}}
	<tr>
		<td colspan="2">
			<input type="submit" value="Valider">
		</td>
	</tr>
    </table>
</form>
<p id="enseignant" style="display: none;">{{enseignant}}</p>

{{#if enseignant}}
<script>
    window.onload = function () {
        var val = document.getElementById("enseignant").firstChild.nodeValue;
        var select = document.getElementById("selectEnseignant");
        
        for (var i=0;i<select.options.length;i++){
            if(select.options[i].value == val){
                select.options[i].selected = true;
            }
        }
    }
</script>
{{/if}}