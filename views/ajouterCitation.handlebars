{{> enTete}}
{{> menu}}		
<h1> Ajouter une citation</h1>
<form method="post" action="/insertCitation" name="ajoutCitation">
	<table>
	<tr>
		<td>
			Enseignant :
		</td>
		<td>
			<select id="selectEnseignant" name="selectEnseignant">
				{{#each listePersonne}}
				<option value="{{this.per_num}}">{{this.per_nom}}</option> 
				{{/each}}
			</select>
		</td>
	</tr>
	<tr>
		<td>
			Date citation :
		</td>
		<td>
			<input type="text" placeholder="jj/mm/aaaa" pattern="[0-3][0-9]/[0-1][0-9]/[1-2][0-9][0-9][0-9]" name="date" id="date" required>
		</td>
	</tr>
	<tr>
		<td>
			Citation :
		</td>
		<td>
			<textarea name="citation" id="citation" required>...</textarea>
		</td>
	</tr>
	<tr>
		<td colspan="2">
			<input type="submit" value="Valider">
		</td>
	</tr>
    </table>
</form>